
// geometry.pwc

// Point

struct Point {
  x: Double;
  y: Double;
}

fn init(self: Point, x: Double, y: Double) {
  self.x = x;
  self.y = y;
}

fn distance(self: Point, other: Point) -> Double {
  let dx = abs(self.x - other.x);
  let dy = abs(self.y - other.y);
  return sqrt(pow(dx, 2) + pow(dy, 2));
}

// Circle

struct Circle {
  center: Point;
  radius: Double;
}

fn init(self: Circle, radius: Double) {
  init(self, new Point(0, 0), radius);
}

fn init(self: Circle, center: Point, radius: Double) {
  self.center = center;
  self.radius = radius;
}

fn perimeter(self: Circle) -> Double {
  return 2 * PI * self.radius;
}

fn area(self: Circle) -> Double {
  return PI * pow(self.radius, 2);
}

// Rect

struct Rect {
  center: Point;
  width: Double;
  height: Double;
}

fn init(self: Rect, width: Double, height: Double) {
  init(self, new Point(0, 0), width, height);
}

fn init(self: Rect, center: Point, width: Double, height: Double) {
  self.center = center;
  self.width = width;
  self.height = height;
}

fn perimeter(self: Rect) -> Double {
  return 2 * (self.width + self.height);
}

fn area(self: Rect) -> Double {
  return self.width * self.height;
}

// Shape

interface Area {
  fn area(self: Self) -> Double;
}

interface Perimeter {
  fn perimeter(self: Self) -> Double;
}

type Shape = Area + Perimeter;

fn main() {
  // Points
  let p1 = new Point(-3, -4);
  let p2 = new Point(3, 4);
  let d = p1.distance(p2);
  println(d); // 10

  // Circles
  let c1 = new Circle(3);
  let c2 = new Circle(new Point(1, 2), 3);
  let perim = c1.perimeter();
  println(perim); // 18.849556
  let area = c2.area();
  println(area); // 28.274334

  // Rects
  let r1 = new Rect(3, 4);
  let r2 = new Rect(new Point(1, 2), 3, 4);
  let perim = r1.perimeter();
  println(perim); // 14
  let area = r2.area();
  println(area); // 12

  // Shape
  var shape: Shape;
  shape = c1;
  println(shape.perimeter()); // 18.849556
  println(shape.area()); // 28.274334
  shape = r1;
  println(shape.perimeter()); // 14
  println(shape.area()); // 12
}
